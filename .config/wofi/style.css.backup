:root {
	--nord0: #2e3440;
	--nord1: #3b4252;
	--nord2: #434c5e;
	--nord3: #4c566a;
	--nord4: #d8dee9;
	--nord5: #e5e9f0;
	--nord6: #eceff4;
	--nord7: #8fbcbb;
	--nord8: #88c0d0;
	--nord9: #81a1c1;
	--nord10: #5e81ac;
	--nord11: #bf616a;
	--nord12: #d08770;
	--nord13: #ebcb8b;
	--nord14: #a3be8c;
	--nord15: #b48ead;
}
#window {
	background-color: rgba(--wofi-rgb-color0, 1);
	font-family: 'FiraCode Nerd Font', monospace;
    position: top;
  border-radius: 0;
}
	#input image {
		color: rgba(--wofi-rgb-color2);
		margin-left: 10px;
	}
	#input {
		margin-bottom: 20px;
		margin-left: 20px;
		margin-right: 20px;
		margin-top: 20px;
		background-color: --wofi-color0;
		border: 1px solid --wofi-color3;
		border-radius: 0px;
		transition: 0.125s ease-in-out;
	  padding: 10px 0;
	}
	#input:focus {
		background-color: rgba(--wofi-rgb-color4,0.1);
		margin-left: 20px;
		margin-right: 20px;
		transition: 0.125s ease-in-out;
	}
	label {
		color: --wofi-color13;
		/* transition: 0.5s ease-in-out; */
	    padding: 10px 10px 10px 10px;
	    margin-left: 10px;
	}
	#text:selected, #entry:selected {
	    color: #d8dee9;
	    background-color: #3b4252;
	    border: none;
	}
#outer-box {
	border: 1px solid #d8dee9;
}
